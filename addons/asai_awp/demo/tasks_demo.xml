        <field name="order_number">2</field>
        <field name="order_description">Second demo order for part PART_ID-001</field>
        <field name="order_status">in_progress</field>
        <field name="task_description">Assemble 5 pieces of PART_ID-001</field>
        <field name="parts_count">5</field>
        <field name="hidden" eval="False"/>
        <!-- Доступна только user1, наследуется манагером и админом -->
        <field name="assigned_user_ids" eval="[
            (4, ref('asai_awp.user1'))
        ]"/>
        <!-- Т.к. уже в работе (демо), пишем, кем именно задача взята в рабоу - user1 -->
        <field name="taken_by_ids" eval="[
            (4, ref('asai_awp.user1'))
        ]"/>
    </record>

