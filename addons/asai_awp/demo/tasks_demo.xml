<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <!-- Демо-задача для детали PART_ID-001 -->
    <record id="task_demo_1" model="awp.tasks">
        <field name="task_id">TASK_ID-001</field>
        <field name="part_id">PART_ID-001</field>
        <field name="order_number">1</field>
        <field name="order_description">First demo order for part PART_ID-001</field>
        <field name="order_status">draft</field>
        <field name="task_description">Assemble 10 pieces of PART_ID-001</field>
        <field name="parts_count">10</field>
        <field name="hidden" eval="False"/>
        <!-- Доступна только user1 и user2, наследуется манагером и админом -->
        <field name="assigned_user_ids" eval="[
            (4, ref('asai_awp.user1')),
            (4, ref('asai_awp.user2'))
        ]"/>
    </record>
    <record id="task_demo_2" model="awp.tasks">
        <field name="task_id">TASK_ID-002</field>
